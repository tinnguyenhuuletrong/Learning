{-# STDLIB_VERSION 3 #-}
{-# CONTENT_TYPE DAPP #-}
{-# SCRIPT_TYPE ACCOUNT #-}
let ownerPubKey = base58'ogqPrTgdbEBYZr43hPG5BhoRVJ8K98221VvWhuMRpGi'

@Verifier(tx)
func verify() = {
    match tx {
        case t: TransferTransaction | MassTransferTransaction => sigVerify(tx.bodyBytes, tx.proofs[0], ownerPubKey)
        case s: SetScriptTransaction => true
        case d: DataTransaction => true
        case _ => false
    }
}
