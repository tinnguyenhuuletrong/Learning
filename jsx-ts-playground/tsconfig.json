{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2019"],
    "module": "commonjs",
    "jsx": "react-jsx",
    "target": "es2019",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "include": ["src/**/*"]
}
